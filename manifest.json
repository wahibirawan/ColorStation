{
  "manifest_version": 3,
  "name": "ColorStation",
  "description": "Precision color picker with loupe sampling and fast copy workflow.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "ColorStation",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "options_page": "options.html",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "commands": {
    "start-picker": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Start ColorStation picker"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
